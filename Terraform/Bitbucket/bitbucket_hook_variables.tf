
variable "hook_repository" {
    type = string
    description = "Bitbucket hook repository"
    validation {
        condition     = length(var.name) > 30 && substr(var.name, 0, 30)
        error_message = "The name value must be a valid."
    }
}

variable "hook_owner" {
    type = string
    description = "Bitbucket hook owner"
    validation {
        condition     = length(var.name) > 30 && substr(var.name, 0, 30)
        error_message = "The name value must be a valid."
    }
}
